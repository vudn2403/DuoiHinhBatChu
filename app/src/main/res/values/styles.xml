<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnswerButton">
        <item name="android:textColor">#960a0a</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_answer</item>
        <item name="android:text">""</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="KeywordButton">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_keyword</item>
        <item name="android:text">"a"</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
